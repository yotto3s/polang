; RUN: %polang_compiler --dump-ast %s | %FileCheck %s

; Test all comparison operators
; CHECK: NBlock

; CHECK: |-NExpressionStatement
; CHECK:   `-NBinaryOperator '<'
1 < 2

; CHECK: |-NExpressionStatement
; CHECK:   `-NBinaryOperator '<='
1 <= 2

; CHECK: |-NExpressionStatement
; CHECK:   `-NBinaryOperator '>'
1 > 2

; CHECK: |-NExpressionStatement
; CHECK:   `-NBinaryOperator '>='
1 >= 2

; CHECK: |-NExpressionStatement
; CHECK:   `-NBinaryOperator '=='
1 == 2

; CHECK: `-NExpressionStatement
; CHECK:   `-NBinaryOperator '!='
1 != 2
