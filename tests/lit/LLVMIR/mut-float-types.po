; RUN: %polang_compiler %s | %FileCheck %s

; Test mutable f32 variable lowering
; CHECK: define float @get_f32() {
; CHECK: {{.*}}alloca float{{.*}}
; CHECK: {{.*}}store float{{.*}}
; CHECK: {{.*}}load float{{.*}}
; CHECK: {{.*}}ret float %{{[0-9]+}}
; CHECK: }
let get_f32(): f32 = let x: f32 = mut (2.5 as f32) in *x

; Test mutable f64 variable lowering
; CHECK: define double @get_f64() {
; CHECK: {{.*}}alloca double{{.*}}
; CHECK: {{.*}}store double{{.*}}
; CHECK: {{.*}}load double{{.*}}
; CHECK: {{.*}}ret double %{{[0-9]+}}
; CHECK: }
let get_f64(): f64 = let x: f64 = mut 3.14 in *x
