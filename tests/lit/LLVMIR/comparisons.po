; RUN: %polang_compiler %s | %FileCheck %s

; Test less-than comparison
; CHECK: define i1 @cmp_lt(i64 %{{[0-9]+}}, i64 %{{[0-9]+}}) {
; CHECK:   %{{[0-9]+}} = icmp slt i64 %{{[0-9]+}}, %{{[0-9]+}}
; CHECK:   ret i1 %{{[0-9]+}}
; CHECK: }
let cmp_lt(a: int, b: int): bool = a < b

; Test less-or-equal comparison
; CHECK: define i1 @cmp_le(i64 %{{[0-9]+}}, i64 %{{[0-9]+}}) {
; CHECK:   %{{[0-9]+}} = icmp sle i64 %{{[0-9]+}}, %{{[0-9]+}}
; CHECK:   ret i1 %{{[0-9]+}}
; CHECK: }
