; RUN: %polang_repl %s | %FileCheck %s

; Test execution of functions with inferred parameter types

; Inferred int parameter
let double_int(x) = x * 2
let r1 = double_int(5)

; Inferred bool parameter
let to_int(x) = if x then 1 else 0
let r2 = to_int(true)

; Multiple inferred parameters - each param directly used with literal
let add3(a, b, c) = (a + 0) + (b + 0) + (c + 0)
let r3 = add3(1, 2, 3)

; Combine results: r1 (10) + r2 (1) + r3 (6) = 17
; CHECK: 17 : int
r1 + r2 + r3
