; RUN: %polang_compiler --emit-mlir %s | %FileCheck %s

; Untyped parameters remain as type variables (polymorphic)
; Type is resolved via monomorphization when the function is called

; Polymorphic function with untyped parameter
; CHECK: {{.*}}polang.func @double_it(%{{.*}}: !polang.typevar{{.*}}){{.*}}polang.polymorphic{{.*}}
let double_it(x) = x * 2

; Polymorphic function with untyped parameter
; CHECK: {{.*}}polang.func @half(%{{.*}}: !polang.typevar{{.*}}){{.*}}polang.polymorphic{{.*}}
let half(x) = x / 2.0

; Polymorphic function with untyped parameter
; CHECK: {{.*}}polang.func @is_zero(%{{.*}}: !polang.typevar{{.*}}){{.*}}polang.polymorphic{{.*}}
let is_zero(x) = x == 0

; Partially typed function (x is int, y is typevar)
; CHECK: {{.*}}polang.func @add(%{{.*}}: !polang.int, %{{.*}}: !polang.typevar{{.*}}){{.*}}polang.polymorphic{{.*}}
let add(x: int, y) = x + y

