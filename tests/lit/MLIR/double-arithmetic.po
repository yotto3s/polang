; CHECK:      polang.func @dsub(%arg0: !polang.float<64>, %arg1: !polang.float<64>) -> !polang.float<64> {
; CHECK-NEXT:   %{{[0-9]+}} = polang.sub %arg0, %arg1 : !polang.float<64>, !polang.float<64> -> !polang.float<64>
; CHECK-NEXT:   polang.return %{{[0-9]+}} : !polang.float<64>
; CHECK-NEXT: }
let dsub(a: f64, b: f64): f64 = a - b

