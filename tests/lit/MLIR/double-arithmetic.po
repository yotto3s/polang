; CHECK-NEXT:   %{{[0-9]+}} = polang.div %arg0, %arg1 : !polang.float<64>, !polang.float<64> -> !polang.float<64>
; CHECK-NEXT:   polang.return %{{[0-9]+}} : !polang.float<64>
; CHECK-NEXT: }
let ddiv(a: f64, b: f64): f64 = a / b
