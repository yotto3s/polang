; RUN: %polang_compiler --emit-mlir %s | %FileCheck %s

; Test double addition
; CHECK:      polang.func @dadd(%arg0: !polang.float<64>, %arg1: !polang.float<64>) -> !polang.float<64> {
; CHECK-NEXT:   %{{[0-9]+}} = polang.add %arg0, %arg1 : !polang.float<64>, !polang.float<64> -> !polang.float<64>
; CHECK-NEXT:   polang.return %{{[0-9]+}} : !polang.float<64>
; CHECK-NEXT: }
let dadd(a: f64, b: f64): f64 = a + b

