; RUN: %polang_compiler --emit-mlir %s | %FileCheck %s

; Test MLIR representation of unsigned integer types (u8, u16, u32, u64)

; Function with u8 parameters
; CHECK: {{.*}}polang.func @add_u8(%{{.*}}: !polang.integer<8, unsigned>, %{{.*}}: !polang.integer<8, unsigned>) -> !polang.integer<8, unsigned>{{.*}}
let add_u8(a: u8, b: u8): u8 = a + b

; Function with u16 parameters
; CHECK: {{.*}}polang.func @add_u16(%{{.*}}: !polang.integer<16, unsigned>, %{{.*}}: !polang.integer<16, unsigned>) -> !polang.integer<16, unsigned>{{.*}}
let add_u16(a: u16, b: u16): u16 = a + b

; Function with u32 parameters
; CHECK: {{.*}}polang.func @add_u32(%{{.*}}: !polang.integer<32, unsigned>, %{{.*}}: !polang.integer<32, unsigned>) -> !polang.integer<32, unsigned>{{.*}}
