; Let expressions for local bindings
let result = let x = 10 and y = 20 in x + y  ; multiple bindings with 'and'

; Let expressions inside function body
let compute(a: int, b: int): int =
  let sum = a + b and diff = a - b in  ; sum=8, diff=2
  sum * diff                            ; 8 * 2 = 16

compute(5, 3)  ; result: 16
