; Fibonacci sequence using nested let expressions
; fib(0)=0, fib(1)=1, fib(n)=fib(n-1)+fib(n-2)
let fib5 =
  let f0 = 0 and f1 = 1 in  ; base cases
  let f2 = f0 + f1 in       ; 0 + 1 = 1
  let f3 = f1 + f2 in       ; 1 + 1 = 2
  let f4 = f2 + f3 in       ; 1 + 2 = 3
  let f5 = f3 + f4 in       ; 2 + 3 = 5
  f5

fib5  ; result: 5
