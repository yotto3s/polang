; Conditional expressions with if/then/else
let max(a: i64, b: i64): i64 = if a > b then a else b
let abs(x: i64): i64 = if x < 0 then 0 - x else x
let sign(n: i64): i64 = if n > 0 then 1 else if n < 0 then 0 - 1 else 0  ; nested if

let result = max(abs(0 - 10), 5)  ; max(10, 5)
result                             ; result: 10
