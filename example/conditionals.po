; Conditional expressions with if/then/else
let max (a: int) (b: int): int = if a > b then a else b
let abs (x: int): int = if x < 0 then 0 - x else x
let sign (n: int): int = if n > 0 then 1 else if n < 0 then 0 - 1 else 0  ; nested if

let result = max(abs(0 - 10), 5)  ; max(10, 5)
result                             ; result: 10
